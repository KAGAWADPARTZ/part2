<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/lightblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307"
        tools:layout_editor_absoluteX="0dp">

        <!--Laundry Image Icon-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/laundry_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <!--Laundry Shop Name-->
        <TextView
            android:id="@+id/laundryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/laundry_img"
            android:text="Labarkada"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!--Done | Processing -->

        <TextView
            android:id="@+id/activation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/laundry_img"
            android:layout_marginTop="50dp"
            android:textAlignment="viewEnd"
            android:text="Done"
            android:layout_marginRight="10dp"
            android:textColor="@color/Online"
            android:textSize="20sp"
            />


        <!--Laundry Shop Services-->


        <TextView
            android:id="@+id/services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/laundry_img"
            android:layout_below="@id/laundryName"
            android:text="Services"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/laundry_img"
            android:layout_below="@id/services"
            android:text="price"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/laundry_img"
            android:layout_below="@id/price"
            android:text="Location"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/lightblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307"
        tools:layout_editor_absoluteX="0dp">

        <!--Laundry Image Icon-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/laundry_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <!--Laundry Shop Name-->
        <TextView
            android:id="@+id/laundryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/laundry_img"
            android:text="Labarkada"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!--Done | Processing -->

        <TextView
            android:id="@+id/activation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/laundry_img"
            android:layout_marginTop="50dp"
            android:textAlignment="viewEnd"
            android:text="Done"
            android:layout_marginRight="10dp"
            android:textColor="@color/Online"
            android:textSize="20sp"
            />


        <!--Laundry Shop Services-->


        <TextView
            android:id="@+id/services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/laundry_img"
            android:layout_below="@id/laundryName"
            android:text="Services"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/laundry_img"
            android:layout_below="@id/services"
            android:text="price"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/laundry_img"
            android:layout_below="@id/price"
            android:text="Location"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="407dp"
        android:layout_height="78dp"
        android:background="#D9D9D9"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"></LinearLayout>

    <ImageButton
        android:id="@+id/btn_laundry"
        android:layout_width="92dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_status"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_local_laundry_service_24"
        app:tint="#5F7B83" />

    <ImageButton
        android:id="@+id/btn_status"
        android:layout_width="92dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_file_copy_24"
        app:tint="#3DC2EC" />

    <ImageButton
        android:id="@+id/btn_history"
        android:layout_width="92dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_status"
        app:srcCompat="@drawable/baseline_history_24"
        app:tint="#5F7B83" />

    <!--Laundry Hub Icon-->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="131dp"
        android:layout_height="32dp"
        android:text="Update Status"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="241dp"
        android:layout_height="90dp"
        android:background="#97D6EA"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/minilogo" />

    </LinearLayout>

<!--Home Screen Profile Image Button-->
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="173dp"
        android:layout_height="90dp"
        android:background="#97D6EA"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001">

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="63dp"
            android:layout_height="54dp"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>